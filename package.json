{
  "name": "py-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "webpack",
    "build:dynamic": "python3 build_bundles.py",
    "build:watch": "python3 build_bundles.py && echo 'Watching for changes...'",
    "dev": "echo 'Development mode - using individual files'",
    "bundle:check": "python3 -c 'from app.utils.static_loader import collect_static_files; print(\"Dynamic bundle order:\"); files = collect_static_files(); print(f\"CSS: {len(files[2])} files, JS: {len(files[0]) + len(files[1])} files\")'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@govbr-ds/core": "^3.6.1",
    "dotenv": "^16.5.0",
    "echarts": "^5.6.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "mini-css-extract-plugin": "^2.9.2",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  }
}
